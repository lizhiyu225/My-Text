.avatar {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  background-color: #3a4861;
}
.avatar image {
  width: 220rpx;
  height: 220rpx;
  border-radius: 50%;
  box-shadow: 0 0 0 10rpx #777f92;
}
.cells{
  margin-top: 20rpx;
}
.cells .item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  /* position: relative; */
  padding: 20rpx 30rpx;
  border-bottom: 1rpx  solid #f0f0f0;
  background-color: #fff;
}
.cells .item::after{
  content: " ";
  height: 10rpx;
  width: 10rpx;
  border:0px solid #ccc;
  border-width: 3rpx 3rpx 0 0;
  transform: matrix(1,1,-1,1,0,0);
}

